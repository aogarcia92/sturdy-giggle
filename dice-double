import java.util.*;
public class Main {        public static int sum;    public static void main(String[] args) {        int roll1;    int roll2;    int max = 6;    int min = 1;    Random rand = new Random();        roll1 = rand.nextInt((max - min) + 1) + min;    roll2 = rand.nextInt((max - min) + 1) + min;        while(roll1 != roll2) {    rollOutput(roll1, roll2);    roll1 = rand.nextInt((max - min) + 1) + min;    roll2 = rand.nextInt((max - min) + 1) + min;    sum = roll1 + roll2;    }    rollOutput(roll1, roll2);  }    public static void rollOutput(int r1, int r2) {    System.out.println("Roll #1: " + r1);    System.out.println("Roll #1: " + r2);    sum = r1 + r2;    System.out.println("The total is " + sum + "!");  }  }
